[
  {{ range $index, $value := where .Site.Pages "Type" "in" (slice "reviews" "blog" "about")  }}
    {{ if $index }}, {{ end }}
    {
      "id": "{{- .RelPermalink -}}",
      "title": "{{- .Title -}}",
      "content": {{- .Content | plainify | jsonify -}},
      "summary": {{- .Summary | plainify | jsonify -}},
      "section": "{{- .Section -}}",
      "tags": {{- .Params.tags | jsonify -}}
    }
  {{ end }}
]
